
{{#each ideas}}
<div class="card card-body mb-3">
	<h4>{{title}}</h4>
	<p>{{content}}</p>
	<div class="row">
	<a href="/ideas/edit/{{id}}" class="btn btn-link"  >Edit</a>
	<form action="ideas/{{id}}?_method=DELETE" method="post">
		<input type="hidden" name="_method" value="DELETE">
		<button type="submit" class="text-danger btn btn-link">Delete</button>
	</form>
	</div>
</div>
{{else}}
	<p>No ideas found.</p>
{{/each}}